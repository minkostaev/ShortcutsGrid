<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net6.0-windows</TargetFramework>
    <Nullable>enable</Nullable>
    <UseWPF>true</UseWPF>
    <RuntimeIdentifiers>win-x64</RuntimeIdentifiers>
    <ApplicationIcon>Resources\disk-tools-128.ico</ApplicationIcon>
    <AssemblyVersion>1.2.2.1</AssemblyVersion>
    <FileVersion>1.2.2.1</FileVersion>
    <VersionPrefix>1.2.2</VersionPrefix>
    <VersionSuffix>$([System.DateTime]::UtcNow.ToString(yyyy-MM-dd))</VersionSuffix>
  </PropertyGroup>

  <ItemGroup>
    <Content Include="Resources\ms-office-128.ico" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="MongoDB.Driver" Version="[2.15.1]" />
    <PackageReference Include="System.Drawing.Common" Version="[6.0.0]" />
  </ItemGroup>

  <ItemGroup>
    <Reference Include="ShortcutsGrid.Extended">
      <HintPath>..\Resources\ShortcutsGrid.Extended.dll</HintPath>
    </Reference>
    <Reference Include="ShortcutsGrid.Nexum">
      <HintPath>..\Resources\ShortcutsGrid.Nexum.dll</HintPath>
    </Reference>
  </ItemGroup>

</Project>