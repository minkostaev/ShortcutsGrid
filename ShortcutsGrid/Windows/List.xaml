<Window x:Class="ShortcutsGrid.Windows.List"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ShortcutsGrid.Windows"
        mc:Ignorable="d"
        Title="List" Height="440" Width="400">
    <Grid>
        <DataGrid x:Name="dgrShortcuts" HorizontalAlignment="Left" Width="160"/>
        <TextBlock x:Name="tbNotAllowed" Text="Not Allowed" HorizontalAlignment="Left" Width="240" Margin="160,0,0,0"/>
        <Grid x:Name="pnlControl" HorizontalAlignment="Left" Width="240" Margin="160,0,0,0">
            <Button x:Name="btnUp" Content="Up" Margin="0,10,135,0" VerticalAlignment="Top"/>
            <Button x:Name="btnDown" Content="Down" Margin="0,35,135,0" VerticalAlignment="Top"/>
            <Button x:Name="btnCommit" Content="Update" Margin="0,125,135,0" VerticalAlignment="Top"/>
            <TextBox x:Name="txtName" Margin="0,150,10,0" TextWrapping="Wrap" VerticalAlignment="Top"/>
            <TextBox x:Name="txtPath" Margin="0,173,10,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="56"/>
            <TextBox x:Name="txtImg" Margin="0,234,10,10" TextWrapping="Wrap"/>
        </Grid>
        

    </Grid>
</Window>
