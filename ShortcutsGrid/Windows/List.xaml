<Window x:Class="ShortcutsGrid.Windows.List"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ShortcutsGrid.Windows"
        mc:Ignorable="d"
        Title="List" Height="476" Width="400">
    <Grid>
        <DataGrid x:Name="dgrNumbers" HorizontalAlignment="Left" Width="20"/>
        <DataGrid x:Name="dgrShortcuts" HorizontalAlignment="Left" Width="160" Margin="20,0,0,0"/>
        <TextBlock x:Name="tbNotAllowed" Text="Not Allowed" Margin="180,0,0,0"/>
        <Grid x:Name="pnlControl" Margin="180,0,0,0">
            <Button x:Name="btnUp" Content="↑" Margin="10,10,180,0" VerticalAlignment="Top"/>
            <Button x:Name="btnDown" Content="↓" Margin="10,35,180,0" VerticalAlignment="Top"/>
            <Button x:Name="btnNew" Content="New" Margin="125,10,10,0" VerticalAlignment="Top"/>
            <Button x:Name="btnRemove" Content="Remove" Margin="125,40,10,0" VerticalAlignment="Top"/>
            <Button x:Name="btnCommit" Content="Update" Margin="125,70,10,0" VerticalAlignment="Top"/>
            <TextBox x:Name="txtName" Margin="10,95,10,0" TextWrapping="Wrap" Height="18" VerticalAlignment="Top"/>
            <TextBox x:Name="txtPath" Margin="10,118,10,0" TextWrapping="Wrap" Height="56" VerticalAlignment="Top"/>
            <TextBox x:Name="txtImg" Margin="10,179,10,0" TextWrapping="Wrap" Height="180" VerticalAlignment="Top"/>
        </Grid>


    </Grid>
</Window>
